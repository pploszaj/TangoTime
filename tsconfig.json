{
    "compilerOptions": {
      "jsx": "react",
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "src/"
    },
    "include": ["src/**/*", "src/types/*.d.ts"]
}